{
  "name": "dtradert",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "overrides": {
    "eslint": "^8.57.1",
    "react-dom": "^17.0.2",
    "nth-check": "2.0.1"
  },
  "scripts": {
    "bootstrap": "npm ci --strict-peer-deps --verbose",
    "build": "npm run build --workspace @deriv/trader",
    "vercel-build": "npm run vercel:build",
    "vercel:build": "cd packages/trader && npm ci && npx webpack --config build/webpack.config.js --env base=prod",
    "dev": "npm run dev --workspace @deriv/trader",
    "serve": "npm exec --workspace=@deriv/trader -- npm run serve",
    "clean": "echo 'Cleaning node_modules...' && find . -name \"node_modules\" -type d -prune -exec rm -rf {} +",
    "test": "npm run test:stylelint && npm run test:eslint-all && npm run test:jest",
    "test:eslint-all": "npm run --workspaces --if-present test:eslint",
    "test:stylelint": "stylelint \"./packages/*/src/**/*.s(a|c)ss\"",
    "test:jest": "jest --all --maxWorkers=${JEST_MAX_WORKERS:-'50%'}",
    "stylelint:fix": "stylelint \"./packages/*/src/**/*.s(a|c)ss\" --fix",
    "prettify": "prettier --config ./.prettierrc --write \"./packages/*/{stories,script,src,build}/**/*.{js,jsx,ts,tsx,scss}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/preset-typescript": "^7.24.7",
    "@deriv-com/analytics": "1.31.3",
    "@deriv-com/derivatives-charts": "^1.1.8",
    "@types/react-transition-group": "^4.4.4",
    "babel-jest": "^29.7.0",
    "dotenv": "^8.2.0",
    "nth-check": "2.0.1",
    "pbkdf2": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-svg-core": "3.0.3",
    "react-toastify": "^9.1.3",
    "trackjs": "^3.10.4",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-react": "^7.24.7",
    "@deriv-com/eslint-config-deriv": "2.2.0",
    "husky": "^7.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "stylelint": "^16.23.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
